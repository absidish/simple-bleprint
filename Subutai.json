    {
      "name": "ubuntu16-server",
      "template": "ubuntu16",
      "peer_group": "HTTP-GROUP",
      "size": "SMALL",
      "expose": [
        {
          "protocol": "https",
          "domain": "cloud.stage-hub.net",
          "port_int": "80",
          "port_ext": "443"
